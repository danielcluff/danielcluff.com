---
interface Props {
	title: string;
	href: string;
	linkText: string;
	imageUrl: string;
	imageAlt: string;
	skills: string;
}

const { href, linkText, title, imageUrl, imageAlt, skills } = Astro.props;
---

<section class="grid">
	<img src={imageUrl} alt={imageAlt} />
	<div>
		<h3>
			{title}
		</h3>
		<p class="accent">
			{skills}
		</p>
		<p>
			<slot />
		</p>
		<p>
			<a href={href} target="_blank" class="secondary">{linkText}</a>
		</p>
	</div>
</section>

<style>
	h3 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: white;
	}
	img {
		border-radius: 4px;
	}
	.grid {
		margin-bottom: 3rem;
		@media (min-width: 768px) {
			grid-column-gap: 1rem;
			grid-template-columns: 33% auto;
		}
	}
	.accent {
		color: rgb(197, 216, 109);
	}
</style>
